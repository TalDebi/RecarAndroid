<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.idz.Recar.Modules.Login.Login"
        />
    <action
        android:id="@+id/action_loginFragment_to_registerFragment"
        app:destination="@id/registerFragment" />
    <action
        android:id="@+id/action_loginFragment_to_studentsFragment"
        app:destination="@id/studentsFragment"
        app:popUpTo="@+id/nav_graph"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.idz.Recar.Modules.Register.Register"
        />
    <action
        android:id="@+id/action_registerFragment_to_loginFragment"
        app:destination="@id/loginFragment" />
    <action
        android:id="@+id/action_registerFragment_to_studentsFragment"
        app:destination="@id/studentsFragment"
        app:popUpTo="@+id/nav_graph"
        app:popUpToInclusive="true"/>
    <fragment
        android:id="@+id/studentsFragment"
        android:name="com.idz.Recar.Modules.Students.StudentsFragment"
        tools:layout="@layout/fragment_students">
        <action
            android:id="@+id/action_studentsFragment_to_blueFragment"
            app:destination="@id/blueFragment" />
    </fragment>
    <fragment
        android:id="@+id/blueFragment"
        android:name="com.idz.Recar.BlueFragment"
        tools:layout="@layout/fragment_blue">
        <argument
            android:name="TITLE"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/addStudentFragment"
        android:name="com.idz.Recar.Modules.AddStudent.AddStudentFragment"
        tools:layout="@layout/fragment_add_student" />
    <action android:id="@+id/action_global_addStudentFragment" app:destination="@id/addStudentFragment" />
    <fragment
        android:id="@+id/profileInfoFragment"
        android:name="com.idz.Recar.Modules.Profile.ProfileInfoFragment"
        tools:layout="@layout/fragment_profile_info">
        <action
            android:id="@+id/action_profileInfoFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true"
            />
        <action
            android:id="@+id/action_profileInfoFragment_to_profileEditFragment"
            app:destination="@id/profileEditFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileEditFragment"
        android:name="com.idz.Recar.Modules.Profile.ProfileEditFragment"
        >
    <action
        android:id="@+id/action_profileEditFragment_to_profileInfoFragment"
        app:destination="@id/profileInfoFragment" />
    </fragment>
</navigation>